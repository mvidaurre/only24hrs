%h1 Listing tasks

%table.striped
  %thead
    %tr
      %th Name
      %th Daadline
      %th Priority
      %th completion
      %th Status
      %th Focus
      %th Goal
      %th.ar-commands
        = link_to 'New Task', new_task_path
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.daadline
        %td= task.priority 
        %td= task.completion
        %td= task.status
        %td= task.focus
        %td= task.goal
        %td.ar-commands
          = link_to 'Progress', task_progresses_path(task)
          = link_to 'Show', task
          = link_to 'Edit', edit_task_path(task)
          = link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete
