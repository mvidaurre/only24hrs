%h2 Sign up to only24hrs
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %fieldset
    %legend Sign up for your new account
    %div
      = f.label :email
      = f.email_field :email, :placeholder => 'user@domain.com'
      = f.error :email, :id => 'email_error'
    %div
      = f.label :password
      = f.password_field :password, :hint => 'At least 8 characters long'
    %div
      = f.label :password_confirmation
      = f.password_field :password_confirmation, :hint => 'Should be equal to password'
    %div= f.submit "Sign up"
#login-links
  = render "users/shared/links"