!!! 5
-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
- html_tag :class => "no-js", :lang => "en" do
  = render "head"

  %body{ :class => "#{ controller.controller_name }" }
    = render "chromeframe"
    = render "header"
    - if current_user
      #logged-links
        = render partial: "users/shared/logged"
      %nav#main_nav
        = render_navigation 
    - if flash.keys.length > 0
      = render "flashes"
      
    #main{ :role => "main" }
      = yield

    = render "footer"

    -# Javascript at the bottom for fast page loading
    = render "javascripts"
    = tracking_code(:account => 'UA-29086775-2')